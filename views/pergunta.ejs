<%- include ('partials/header.ejs') %>

<body>
    <%- include ('partials/navbar.ejs') %>

    <div class="container">
        <hr>
        <h1> <%= pergunta.titulo %> </h1>
        <p> <%= pergunta.descricao %> </p>
        <hr>

        <form action="/responder" method="post">
            <h3>Responda</h3>
            <label for="">Resposta</label>
            <textarea placeholder="Digite sua resposta" class="form-control" name="corpo"></textarea>
            <input type="hidden" name="perguntaId" value="<%= pergunta.id %>">
            <br>
            <button type="submit" class="btn btn-primary">Responder</button>
        </form>

        <hr>
        <h3>Repostas</h3>
        <hr>
        <% resposta.forEach(respostas => { %>
        <br>
        <div class="card">
            <div class="card-body">
                <p><%= respostas.corpo %></p>
            </div>
        </div> <br>
        <% }) %>
    </div>

</body> <%- include ('partials/footer.ejs') %>